{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build:web",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Kezan Protocol",
    "version": "1.0.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "Kezan Protocol",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "bundle": {
      "identifier": "com.kezan.protocol",
      "icon": [
        "icons/icon.png"
      ],
      "targets": [
        "msi"
      ]
    }
  }
}
